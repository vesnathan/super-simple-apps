{
 "name": "simple-flashcards",
 "version": "0.0.1",
 "private": true,
 "workspaces": [
  "frontend",
  "backend",
  "shared",
  "deploy"
 ],
 "scripts": {
  "dev": "cd frontend && yarn dev",
  "build": "cd frontend && yarn build",
  "start": "cd frontend && yarn start",
  "lint": "eslint . --ext .ts,.tsx -c .eslintrc.json --fix",
  "install-all": "yarn",
  "clean": "rm -rf node_modules && rm -rf frontend/node_modules && rm -rf backend/node_modules && rm -rf deploy/node_modules && rm -rf shared/node_modules && rm -rf **/dist && rm -rf **/.next && rm -rf yarn.lock && rm -rf **/yarn.lock && rm -rf **/.turbo && find . -name '.git' -prune -o -name '*.tsbuildinfo' -exec rm -rf {} +",
  "deploy": "cd deploy && yarn deploy:dev",
  "deploy:dev": "cd deploy && yarn deploy:dev",
  "deploy:prod": "cd deploy && yarn deploy:prod",
  "merge-schema": "ts-node backend/scripts/merge-schema-for-appsync.ts",
  "codegen": "graphql-codegen --config codegen.ts",
  "build-gql": "yarn merge-schema && yarn codegen",
  "adsense": "npx tsx scripts/configure-adsense.ts",
  "adsense:enable": "npx tsx scripts/configure-adsense.ts --enable",
  "adsense:disable": "npx tsx scripts/configure-adsense.ts --disable"
 },
 "devDependencies": {
  "@graphql-codegen/cli": "^6.1.0",
  "@graphql-codegen/typescript": "^5.0.7",
  "@next/eslint-plugin-next": "15.0.4",
  "@react-types/shared": "3.25.0",
  "@types/node": "20.5.7",
  "@types/react": "18.3.3",
  "@types/react-dom": "18.3.0",
  "@typescript-eslint/eslint-plugin": "8.11.0",
  "@typescript-eslint/parser": "8.11.0",
  "autoprefixer": "10.4.19",
  "eslint": "^8.57.0",
  "eslint-config-next": "15.0.4",
  "eslint-config-prettier": "9.1.0",
  "eslint-plugin-import": "^2.26.0",
  "eslint-plugin-jsx-a11y": "^6.4.1",
  "eslint-plugin-node": "^11.1.0",
  "eslint-plugin-prettier": "5.2.1",
  "eslint-plugin-react": "^7.23.2",
  "eslint-plugin-react-hooks": "^4.6.0",
  "eslint-plugin-unused-imports": "4.1.4",
  "postcss": "8.4.49",
  "prettier": "3.3.3",
  "tailwind-variants": "0.1.20",
  "tailwindcss": "3.4.16",
  "tsx": "^4.21.0",
  "typescript": "5.6.3"
 },
 "dependencies": {
  "dotenv": "^17.2.3"
 }
}
