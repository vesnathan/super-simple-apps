{
  "name": "super-simple-apps",
  "version": "1.0.0",
  "private": true,
  "description": "Super Simple Apps - A collection of simple, useful web applications",
  "workspaces": [
    "deploy",
    "shared-infra",
    "shared-assets",
    "apps/*",
    "apps/*/frontend",
    "apps/*/backend",
    "apps/*/deploy",
    "apps/*/shared"
  ],
  "scripts": {
    "dev:landing": "cd apps/landing && yarn dev",
    "dev:flashcards": "cd apps/flashcards && yarn dev",
    "dev:flashcards:backend": "cd apps/flashcards/backend && yarn start",
    "dev:image-crop": "cd apps/image-crop && yarn dev",
    "dev:image-resize": "cd apps/image-resize && yarn dev",
    "dev:image-annotate": "cd apps/image-annotate && yarn dev",
    "dev:job-timer": "cd apps/job-timer && yarn dev",
    "dev:crm": "cd apps/crm && yarn dev",
    "dev:invoice": "cd apps/invoice && yarn dev",
    "deploy": "npx tsx deploy/deploy.ts",
    "deploy:dev": "npx tsx deploy/deploy.ts --stage dev",
    "deploy:prod": "npx tsx deploy/deploy.ts --stage prod",
    "deploy:all": "npx tsx deploy/deploy.ts --all --stage dev",
    "deploy:all:prod": "npx tsx deploy/deploy.ts --all --stage prod",
    "deploy:shared": "npx tsx deploy/deploy.ts --shared",
    "deploy:shared-infra:prod": "cd shared-infra && yarn deploy:prod",
    "deploy:landing:prod": "npx tsx deploy/deploy.ts --app=landing --stage prod",
    "deploy:flashcards:dev": "cd apps/flashcards && yarn deploy:dev",
    "deploy:flashcards:prod": "npx tsx deploy/deploy.ts --app=flashcards --stage prod",
    "deploy:image-crop:prod": "npx tsx deploy/deploy.ts --app=image-crop --stage prod",
    "deploy:image-resize:prod": "npx tsx deploy/deploy.ts --app=image-resize --stage prod",
    "deploy:image-annotate:prod": "npx tsx deploy/deploy.ts --app=image-annotate --stage prod",
    "deploy:job-timer:prod": "npx tsx deploy/deploy.ts --app=job-timer --stage prod",
    "deploy:crm:prod": "npx tsx deploy/deploy.ts --app=crm --stage prod",
    "deploy:invoice:prod": "npx tsx deploy/deploy.ts --app=invoice --stage prod",
    "build:landing": "npx tsx deploy/deploy.ts --build-only=landing",
    "build:flashcards": "npx tsx deploy/deploy.ts --build-only=flashcards",
    "invalidate:landing": "npx tsx deploy/deploy.ts --invalidate=landing",
    "invalidate:flashcards": "npx tsx deploy/deploy.ts --invalidate=flashcards"
  },
  "keywords": ["flashcards", "education", "aws", "serverless"],
  "author": "",
  "license": "UNLICENSED"
}
